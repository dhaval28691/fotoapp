<%= form_for Photo.new, :multipart => true, :html => {:role => "form"} do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <%= f.submit "Upload" %>
<% end %>
